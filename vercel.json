{
  "version": 2,
  "framework": "vite",
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
